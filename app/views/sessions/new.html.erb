<div class="container">
  <div class="_form">
    <p>ログイン画面</p>
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
    <div class="user_email">
      <p>【メールアドレス】</p>
      <%= f.email_field :email %>
    </div>
    <div class="user_password">
      <p>【パスワード】</p>
      <%= f.password_field :password %>
    </div>

      <%= f.submit "ログイン" %>
    <% end %>
  </div>
</div>
